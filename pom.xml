											</configuration>
										</pluginExecutor>
										<pluginExecutor>
											<plugin>
												<groupId>com.google.code.maven-replacer-plugin</groupId>
												<artifactId>replacer</artifactId>
												<version>1.5.3</version>
											</plugin>
											<goal>replace</goal>
											<configuration>
												<basedir>${project.build.directory}/database-management/config</basedir>
