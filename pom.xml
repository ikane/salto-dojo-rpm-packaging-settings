										<pluginExecutor>
											<plugin>
												<groupId>org.codehaus.mojo</groupId>
												<artifactId>rpm-maven-plugin</artifactId>
												<version>2.1.2</version>
											</plugin>
											<goal>rpm</goal>
											<configuration>
												<name>database-management-config-@item@</name>
												<distribution>SALTO Consulting</distribution>
												<group>Applications/Programming</group>
												<packager>Quentin Vandekerckhove</packager>
												<needarch>false</needarch>
												<provides>
													<provide><![CDATA[ database-management-config = ${project.version} ]]></provide>
												</provides>
												<preinstallScriptlet>
													<script>
														<![CDATA[
if ! id -u ${app.usr} > /dev/null 2>&1
then
		useradd ${app.usr}

fi
																	]]>
													</script>
												</preinstallScriptlet>
												<mappings>
													<mapping>
														<directory>/etc/database-management</directory>
														<filemode>600</filemode>
														<username>${app.usr}</username>
														<groupname>${app.grp}</groupname>
														<configuration>true</configuration>
														<sources>
															<source>
																<location>${project.build.directory}/@item@/database-management</location>
																<excludes>
																	<exclude>hello-webapp.xml</exclude>
																</excludes>
															</source>
														</sources>
													</mapping>
													<mapping>
														<directory>/etc/database-management</directory>
														<filemode>700</filemode>
														<username>${app.usr}</username>
														<groupname>${app.grp}</groupname>
													</mapping>
												</mappings>
											</configuration>
										</pluginExecutor>
									</pluginExecutors>
								</configuration>
							</execution>
							
							
							
							<execution>
								<id>web-application</id>
								<phase>package</phase>
								<goals>
									<goal>iterator</goal>
								</goals>
								<configuration>
